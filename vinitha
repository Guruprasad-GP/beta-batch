        <script type="text/javascript">
          function validation()
          {
            
          }
            
            var rIndex,
                table = document.getElementById("table");

              
               
            
            function checkEmptyInput()
            {
                var isEmpty = false,
                    customername = document.getElementById("customername").value,
                    accountnumber = document.getElementById("accountnumber").value,
                   
                   accountcredit = document.getElementById("accountcredit").value,
                   location= document.getElementById("location").value,
                    accounttype = document.getElementById("accounttype").value,
                   accountbalance= document.getElementById("accountbalance").value;
            
            
                if(customername === ""){
                   alert("customer name Connot Be Empty");
                    isEmpty = true;
                  
                }
                if(accountnumber=== ""){
                    alert("Account Number Connot Be Empty");
                    isEmpty = true;
                }
                 if(accountcredit=== ""){
                    alert("Account created Connot Be Empty");
                    isEmpty = true;
                }
                 if(location === ""){
                    alert("Location Connot Be Empty");
                    isEmpty = true;
                }
                if(accounttype=== ""){
                    alert("Account Type Connot Be Empty");
                    isEmpty = true;
                }
                if(accountbalance=== ""){
                    alert("Account Balance Connot Be Empty");
                    isEmpty = true;
                }
                return isEmpty;
            }
            
          
            function addHtmlTableRow()
            {
                
                if(!checkEmptyInput()){
                var newRow = table.insertRow(table.length),
                    cell1 = newRow.insertCell(0),
                    cell2 = newRow.insertCell(1),
                    cell3 = newRow.insertCell(2),
                    cell4 = newRow.insertCell(3),
                    cell5 = newRow.insertCell(4),
                    cell6 = newRow.insertCell(5),
                     customername = document.getElementById("customername").value,
                    accountnumber = document.getElementById("accountnumber").value,
                  
                   accountcredit = document.getElementById("accountcredit").value,
                    location= document.getElementById("location").value;
                    accounttype = document.getElementById("accounttype").value,
                   accountbalance= document.getElementById("accountbalance").value;

                cell1.innerHTML = customername;
                cell2.innerHTML = accountnumber;
                cell3.innerHTML = accountcredit;
                cell4.innerHTML = location;
                cell5.innerHTML =  accounttype;
                cell6.innerHTML = accountbalance;
            
                selectedRowToInput();
            }
            }
         
            function selectedRowToInput()
            {
                
                for(var i =1; i < table.rows.length; i++)
                {
                    table.rows[i].onclick = function()
                    {
                    
                      rIndex = this.rowIndex;
                      document.getElementById("customername").value = this.cells[1].innerHTML;
                      document.getElementById("accountnumber").value = this.cells[2].innerHTML;
                      document.getElementById("accountcredit").value = this.cells[3].innerHTML;
                       document.getElementById("location").value = this.cells[4].innerHTML;
                      document.getElementById("accounttype").value = this.cells[5].innerHTML;
                      document.getElementById("accountbalance").value = this.cells[6].innerHTML;
                    };
                }
            }
            selectedRowToInput();
            
           
            
            
            function removeSelectedRow()
            {
                
                table.deleteRow(rIndex);
                // clear input text
                /*document.getElementById("fname").value = "";
                document.getElementById("lname").value = "";
                document.getElementById("age").value = "";*/
                document.getElementById("customername").value = "";
                      document.getElementById("accountnumber").value = "";
                      document.getElementById("accountcredit").value = "";
                       document.getElementById("location").value = "";
                      document.getElementById("accounttype").value = "";
                      document.getElementById("accountbalance").value = "";
            }
             function sumbitForm()
            {
                document.getElementById("customername").value='';
                document.getElementById("accountnumber").value='';
                document.getElementById("accountcredit").value='';
                document.getElementById("location").value='';
                document.getElementById("accounttype").value='';
                document.getElementById("accountbalance").value='';
            }
           
        </script>
        
